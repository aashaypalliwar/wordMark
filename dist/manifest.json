{
  "manifest_version": 2,

  "name": "WordMark",
  "description": "Not the conventional bookmark.",
  "version": "0.0.1",

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Open the popup"
  },
  "icons": {
    "512": "logo512.png"
  },
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "permissions": [
    "unlimitedStorage",
    "tabs",
    "storage",
    "contextMenus",
    "activeTab",
    "*://*/*"
  ]
}
